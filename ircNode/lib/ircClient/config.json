{
    "server": {
        "addr": "",
        "port": 6667,
        "autoReconnect": true,
        "maxRetries": 60,
        "retryDelay": 6
    },
    "bot": {
        "masterPassword": "",
        "commandPrefix": "@",
        "defaultNick": "nodeIrcBot",
        "user": "nodeIrcBot",
        "real": "nodeIrcBot",
        "pass": "",
        "autoJoinChannels": [],
        "autoRestartOnFailure": true,
        "restartDelay": 10,
        "owners": {
            "admin": ""
        }
    },
    "development": {
        "debugModus": true,
        "loggerChannel": "#nodeIrcBotDevelopment"
    },
    "client": {
        "version": "NodeIrcBot:V2:vps.nodeircbot.com",
        "systemCommand": "control",
        "db": "mongodb://127.0.0.1:27017/test",
        "systemAclResource":"system",
        "queueDelay":"10000",
        "permissions": {
            "groups": [
                "admin",
                "mod",
                "guest"
            ],
            "commands": {
                "AUTH": {
                    "groups": false,
                    "function": "auth",
                    "help":"",
                    "description": "Authorize yourself",
                    "arg": [
                        {
                            "name":"username",
                            "mandatory":true,
                            "default":false
                        }, {
                            "name":"password",
                            "mandatory":true,
                            "default":false
                        }
                    ]
                },
                "REGISTER": {
                    "groups": false,
                    "function": "auth",
                    "help":"",
                    "description": "Register yourself",
                    "arg":false
                },
                "RELOAD": {
                    "groups": ["admin","Mod"],
                    "function": "reload",
                    "help":"",
                    "description": "Reload plugins",
                    "arg":false,
                "RESTART": {
                    "groups": ["admin","Mod"],
                    "function": "restart",
                    "help":"",
                    "description": "Restart ircbot",
                    "arg":false
                },
                "SAY": {},
                "NICK": {},
                "JOIN": {},
                "PART": {},
                "SHOUT": {},
                "OP": {},
                "DEOP": {},
                "UPTIME": {},
                "STATS": {},
                "REGISTER": {},
                "VERSION": {},
                "GITUPDATE": {},
                "GITREVERT": {}
            }
        }
    }
}